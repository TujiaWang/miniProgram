/* pages/poster/poster.wxss */
page{
    background-color: rgba(0, 0, 0, .2);
}
.contents {
    min-height: calc(100vh - 300rpx);
    display: flex;
    align-items: center;
    justify-content: center;
}

.contents swiper {
    width: 100%;
    height: 900rpx;
}

.item-wrapper {
    width: 500rpx;
    min-height: 200rpx;
    margin: 0 auto;
    position: relative;
}

.swiper-bg {
    width: 500rpx;
    height: 900rpx;
}

.userinfo {
    display: flex;
    position: absolute;
    left: 20rpx;
    top: 20rpx;
}

.userinfo image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.userinfo view {
    font-size: 20rpx;
    font-weight: 500;
    color: #333;
    padding-top: 12rpx;
}

.mini-qrcode {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    position: absolute;
    right: 20rpx;
    bottom: 40rpx;
}

.bottom {
    padding: 20rpx;
}

#poster{
    width: 1000rpx;
    height: 1800rpx;
    position: absolute;
    left: 999999rpx;
    top: 99999999rpx;
}